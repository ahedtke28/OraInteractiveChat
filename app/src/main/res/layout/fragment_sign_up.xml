<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/emailAccount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="@dimen/field_margin"
            android:background="@drawable/field_bk"
            android:hint="@string/emailHint"
            android:padding="@dimen/base_padding1x"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/firstName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="@dimen/field_margin"
            android:background="@drawable/field_bk"
            android:hint="@string/firstNameHint"
            android:padding="@dimen/base_padding1x"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/mailPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="@dimen/field_margin"
            android:background="@drawable/field_bk"
            android:hint="@string/createPasswordHint"
            android:padding="@dimen/base_padding1x"
            android:inputType="textPassword"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="@dimen/field_margin"
            android:background="@drawable/field_bk"
            android:hint="@string/confirmPasswordHint"
            android:padding="@dimen/base_padding1x"
            android:inputType="textPassword"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/sign"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="@dimen/field_margin"
            android:gravity="center"
            android:background="@color/pink"
            android:text="@string/signUpButton"
            android:textColor="@color/white"
            android:textColorHint="@color/gray" />

    </LinearLayout>

</ScrollView>
